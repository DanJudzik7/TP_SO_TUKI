{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Make",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}/${input:program}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "panel": "dedicated",
                "clear": true
            }
        },
        {
            "label": "Make Consola (delayed)",
            "dependsOrder": "sequence",
            "dependsOn": ["Longer Delay", "Make Consola"],
        },
        {
            "label": "Make Consola",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}/consola"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "presentation": {
                "panel": "dedicated",
                "clear": true
            }
        },
        {
            "label": "Make Test Consola",
            "type": "shell",
            "command": "make test",
            "options": {
                "cwd": "${workspaceFolder}/consola"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "presentation": {
                "panel": "dedicated",
                "clear": true
            }
        },
        {
            "label": "Make Kernel (delayed)",
            "dependsOrder": "sequence",
            "dependsOn": ["Long Delay", "Make Kernel"],
        },
        {
            "label": "Make Kernel",
