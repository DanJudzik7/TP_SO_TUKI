{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Make",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}/${input:program}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Make Console",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}/consola"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "label": "Make Kernel",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}/kernel"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "label": "Make CPU",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}/cpu"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "label": "Make Filesystem",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}/filesystem"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "label": "Make Memory",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}/memoria"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "label": "Make Clean to specific module",
            "type": "shell",
            "command": "make clean",
            "options": {
                "cwd": "${workspaceFolder}/${input:program}"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Make Clean to all modules",
            "type": "shell",
            "command": "make clean -C ./kernel && make clean -C ./cpu && make clean -C ./filesystem && make clean -C ./memoria && make clean -C ./consola",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Valgrind",
            "type": "shell",
            "command": "valgrind --tool=memcheck --leak-check=yes --show-possibly-lost=no --show-reachable=no --num-callers=20 ${workspaceFolder}/${input:program}/${input:program}",
            "options": {
                "cwd": "${workspaceFolder}/${input:program}"
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ],
    "inputs": [
        {
            "id": "program",
            "description": "Nombre del m√≥dulo",
            "default": "consola",
            "type": "pickString",
            "options": [
                "consola",
                "kernel",
                "cpu",
                "filesystem",
                "memoria"
            ]
        },
    ]
}