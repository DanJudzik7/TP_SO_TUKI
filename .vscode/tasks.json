            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "presentation": {
                "panel": "dedicated",
                "clear": true
            }
        },
        {
            "label": "Make Test Memoria",
            "type": "shell",
            "command": "make test",
            "options": {
                "cwd": "${workspaceFolder}/memoria"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "presentation": {
                "panel": "dedicated",
                "clear": true
            }
        },
        {
            "label": "Make Clean to specific module",
            "type": "shell",
            "command": "make clean -C ./${input:program}",
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "panel": "dedicated",
                "clear": true
            }
        },
        {
            "label": "Make Clean to all modules",
            "type": "shell",
            "command": "make clean -C ./kernel && make clean -C ./cpu && make clean -C ./filesystem && make clean -C ./memoria && make clean -C ./consola",
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "panel": "dedicated",
                "clear": true
            }
        },
        {
            "label": "Valgrind",
            "type": "shell",
            "command": "make clean && make && valgrind --tool=memcheck --leak-check=yes --show-possibly-lost=no --show-reachable=no --track-origins=yes --num-callers=20 ${workspaceFolder}/${input:program}/${input:program}",
            "options": {
                "cwd": "${workspaceFolder}/${input:program}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "panel": "dedicated",
                "clear": true
            }
        },
        {
            "label": "Delay",
            "type": "shell",
            "command": "sleep 3",
            "windows": {
                "command": "ping 127.0.0.1 -n 3 > nul"
            },
            "group": "none",
            "presentation": {
                "reveal": "never",
                "echo": false,
                "showReuseMessage": false,
                "close": true
            }
        },
        {
            "label": "Long Delay",
            "type": "shell",
            "command": "sleep 6",
            "windows": {
                "command": "ping 127.0.0.1 -n 6 > nul"
            },
            "group": "none",
            "presentation": {
                "reveal": "never",
                "echo": false,
                "showReuseMessage": false,
                "close": true
            }
        },
        {
            "label": "Longer Delay",
            "type": "shell",
            "command": "sleep 9",
            "windows": {
                "command": "ping 127.0.0.1 -n 9 > nul"
            },
            "group": "none",
            "presentation": {
                "reveal": "never",
                "echo": false,
                "showReuseMessage": false,
                "close": true
            }
        }
    ],
    "inputs": [
        {
            "id": "program",
            "description": "Nombre del m√≥dulo",
            "default": "consola",
            "type": "pickString",
            "options": [
                "consola",
                "kernel",
                "cpu",
                "filesystem",
                "memoria"
            ]
        },
    ]
}