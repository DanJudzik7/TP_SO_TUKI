            }
        },
        {
            "label": "Make CPU",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}/cpu"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "presentation": {
                "panel": "dedicated",
                "clear": true
            }
        },
        {
            "label": "Make CPU (delayed)",
            "dependsOrder": "sequence",
            "dependsOn": ["Delay", "Make CPU"],
        },
        {
            "label": "Make Filesystem",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}/filesystem"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "presentation": {
                "panel": "dedicated",
                "clear": true
            }
        },
        {
            "label": "Make Filesystem (delayed)",
            "dependsOrder": "sequence",
            "dependsOn": ["Delay", "Make Filesystem"],
        },
        {
            "label": "Make Test Filesystem",
            "type": "shell",
            "command": "make test",
            "options": {
                "cwd": "${workspaceFolder}/filesystem"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "presentation": {
                "panel": "dedicated",
                "clear": true
            }
        },
        {
            "label": "Make Memoria",
            "type": "shell",
            "command": "make",
            "options": {
