{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/${input:program}/${input:program}",
			"preLaunchTask": "Make",
			"cwd": "${workspaceFolder}/${input:program}",
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Habilitar la impresión con sangría para gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				},
				{
					"description": "Establecer tipo de desensamblado en Intel",
					"text": "-gdb-set disassembly-flavor intel",
					"ignoreFailures": true
				}
			]
		}
	],
    "inputs": [
        {
            "id": "program",
            "description": "Nombre del módulo",
            "default": "consola",
            "type": "pickString",
            "options": [
                "consola",
                "kernel",
                "cpu",
                "filesystem",
                "memoria"
            ]
        },
    ]
}